<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tabConversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="112dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Moneda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MonedaActualTV"
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:text="Moneda Actual"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/MonedaActualSP"
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                         />

                    <TextView
                        android:id="@+id/MonedaCambioTV"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:text="Monea a Cambiar "
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/MonedaCambio"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:entries="@array/moneda" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:text="Valor aCambiar"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/ValorCambioET"
                        android:layout_width="323dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:ems="10"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/ProcesarCambiosBT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Convertir" />

                    <TextView
                        android:id="@+id/ResultadoTV"
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:text="Usted Recibira"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Longitud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</androidx.constraintlayout.widget.ConstraintLayout>